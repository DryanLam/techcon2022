<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
	<!-- Configurations that affect the Test Framework -->
	<RunConfiguration>
		<RunSettingsFilePath>$(MSBuildProjectDirectory)\Settings\test.runsettings</RunSettingsFilePath>
		<MaxCpuCount>1</MaxCpuCount>
		<ResultsDirectory>TestResults</ResultsDirectory>
	</RunConfiguration>

	<!-- Playwright settings -->
	<Playwright>
		<BrowserName>chromium</BrowserName>
		<!--<BrowserName>firefox</BrowserName>-->
		<ActionTimeout>60000</ActionTimeout>
		<ExpectTimeout>10000</ExpectTimeout>
		<LaunchOptions>
			<Headless>false</Headless>
			<!--<Channel>msedge</Channel>-->
		</LaunchOptions>
		
	</Playwright>

	<!-- Parameters used by tests at run time -->
	<TestRunParameters>
		<Parameter name="PortalUrl" value="https://the-internet.herokuapp.com/basic_auth" />
		<Parameter name="AdminUsername" value="admin" />
		<Parameter name="AdminPassword" value="admin" />
	</TestRunParameters>
	
</RunSettings>